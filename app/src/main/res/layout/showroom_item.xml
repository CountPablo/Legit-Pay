<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/prod_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="PRODUCT DESCRIPTION"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />


    <RelativeLayout
        android:id="@+id/relPostRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prod_description"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/prod_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/slashes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prod_poster"
            android:text=" // "
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/poster_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/slashes"
            android:layout_toEndOf="@+id/slashes"
            android:layout_toRightOf="@+id/slashes"
            android:text="PLATINUM"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="81dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/prod_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE POSTED"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp"
        android:layout_below="@id/relPostRank"
        android:layout_centerHorizontal="true" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/prod_time"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/show_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="78dp"
            android:text="See more >>"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintLeft_toRightOf="@+id/image1"
            app:layout_constraintRight_toLeftOf="@+id/image3"
            app:layout_constraintTop_toBottomOf="@+id/image2" />

        <TextView
            android:id="@+id/fake_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="FakeNum"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/fake_butt"
            app:layout_constraintLeft_toLeftOf="@+id/fake_butt"
            app:layout_constraintRight_toRightOf="@+id/fake_butt" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="13dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@android:color/black"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/image1"
            app:layout_constraintRight_toLeftOf="@+id/image3"
            app:srcCompat="@android:color/black"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="13dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@android:color/black"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/legit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="LegitNum"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/legit_butt"
            app:layout_constraintLeft_toLeftOf="@+id/legit_butt"
            app:layout_constraintRight_toRightOf="@+id/legit_butt" />

        <Button
            android:id="@+id/legit_butt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="46dp"
            android:text="LEGIT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/fake_butt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="46dp"
            android:text="FAKE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
