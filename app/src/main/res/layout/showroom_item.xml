<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="267dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="7dp">

            <TextView
                android:id="@+id/prod_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:text="PRODUCT DESCRIPTION"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/prod_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slashes"
                android:layout_centerHorizontal="true"
                android:text="DATE POSTED"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/prod_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/slashes"
                android:layout_toLeftOf="@+id/slashes"
                android:text="USERNAME"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/poster_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/slashes"
                android:layout_toEndOf="@+id/slashes"
                android:layout_toRightOf="@+id/slashes"
                android:text="PLATINUM"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/slashes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_description"
                android:layout_centerHorizontal="true"
                android:text=" // "
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="0dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:layout_below="@id/prod_time">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@android:color/black"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:
                    app:layout_constraintLeft_toRightOf="@+id/image1"
                    app:srcCompat="@android:color/black"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="29dp"
                    android:layout_marginStart="29dp"
                    android:
                    app:layout_constraintLeft_toRightOf="@+id/image2"
                    app:srcCompat="@android:color/black"
                    tools:layout_editor_absoluteY="0dp" />
            </android.support.constraint.ConstraintLayout>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
